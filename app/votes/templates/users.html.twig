{% extends 'base.html.twig' %}
{% block content %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Username</th>
                <th>Last Login</th>
                <th>View</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{user.id}}</td>
                <td>{{user.username}}</td>
                <td>{{user.last_login}}</td>
                <td><a href="{% url 'userEdit' id=user.id %}" class="btn">View</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
